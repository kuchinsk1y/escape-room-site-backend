generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Quest {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  theme       String
  duration    Int
  players     Int
  difficulty  String
  image       String?
  is_active   Boolean @default(true)
}
